---
import Base from "@/layouts/Base.astro";
import { getCollection } from "astro:content";

const allProjects = await getCollection("projects");
const featuredProjects = allProjects
  .filter((p) => p.data.featured)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<Base
  title="Über uns — ZEN.ARK"
  description="Schweizer Studio für klare Interfaces und filmische Web-Erlebnisse. Wir entwickeln schnelle, zugängliche Websites und schlanke Tools für Teams, die auf Handwerk Wert legen."
  lang="de"
>
  <main></main>
</Base>
